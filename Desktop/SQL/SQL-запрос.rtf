SELECT TOP 1 CONCAT(‘The most popular author is: ‘, first_name, middle_name, last_name)
FROM Book_His BS
INNER JOIN Book B ON Book_His.id = B.book_his_id
INNER JOIN Author A ON B.author_id = A.id
INNER JOIN Full_Name FN ON A.full_name_id = FN.id
WHERE BS.date_of_issue BETWEEN ‘2021-05-10’ AND ‘2021-06-10’
GROUP BY first_name, middle_name, last_name
ORDER BY COUNT(BH.student_id) DESC
